<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>nz.co.aetheric.parent</groupId>
    <artifactId>maven-parent-global</artifactId>
    <version>1.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>Maven Parent: Global</name>
    <description>The organisation-level parent for all Aetheric Engineering modules.</description>
    <url>https://github.com/aetheric/maven-parent/tree/maven-parent-global</url>
	
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

    <licenses>
        <license>
            <name>MIT</name>
            <url>http://opensource.org/licenses/mit</url>
        </license>
    </licenses>

    <developers>
        <developer>
	        <id>tzrlk</id>
            <name>Peter Cummuskey</name>
	        <url>http://gplus.to/tzrlk</url>
            <email>peterc@aetheric.co.nz</email>
            <timezone>UTC+12</timezone>
        </developer>
    </developers>

    <issueManagement>
        <system>github</system>
        <url>https://github.com/aetheric/maven-parent/issues</url>
    </issueManagement>

    <scm>
        <url>https://github.com/aetheric/maven-parent</url>
        <connection>scm:git:git://github.com/aetheric/maven-parent.git</connection>
        <developerConnection>scm:git:git@github.com:aetheric/maven-parent.git</developerConnection>
		<tag>maven-parent-global</tag>
    </scm>
	
	<distributionManagement>

		<repository>
			<id>sonatype-staging</id>
			<name>oss.sonatype.org Staging Repository</name>
			<url>http://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
		</repository>

		<snapshotRepository>
			<id>sonatype-snapshots</id>
			<name>oss.sonatype.org Snapshot Repository</name>
			<url>https://oss.sonatype.org/content/repositories/snapshots/</url>
		</snapshotRepository>

	</distributionManagement>
	
	<profiles>
		<profile>
			<!-- adtivate the sonatype profile when a release is being done -->
			<id>sonaytpe</id>
			<activation>
				<property>
					<name>performRelease</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-gpg-plugin</artifactId>
						<version>1.1</version>
						<executions>
							<execution>
								<id>sign-artifacts</id>
								<phase>verify</phase>
								<goals>
									<goal>sign</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>